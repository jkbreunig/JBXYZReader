<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.example.xyzreader.ui.DynamicHeightNetworkImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/photo_placeholder"
            android:transitionName="@string/article_thumbnail_transition" />

        <TextView
            android:id="@+id/article_title"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/list_item_deafult_margin"
            android:paddingTop="@dimen/list_item_deafult_margin"
            android:paddingRight="@dimen/list_item_deafult_margin"
            android:paddingBottom="4dp"
            android:textColor="@color/primaryTextLightBkgd"
            android:text="Article title"
            android:maxLines="4"
            android:ellipsize="end"
            android:transitionName="@string/article_title_transition" />

        <TextView
            android:id="@+id/article_subtitle"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/list_item_deafult_margin"
            android:paddingRight="@dimen/list_item_deafult_margin"
            android:paddingBottom="@dimen/list_item_deafult_margin"
            android:textColor="@color/secondaryTextLightBkgd"
            android:maxLines="2"
            android:ellipsize="end" />
    </LinearLayout>

</android.support.v7.widget.CardView>
